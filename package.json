{
  "publisher": "simonhe",
  "name": "vscode-highlight-text",
  "displayName": "vscode-highlight-text",
  "version": "0.0.42",
  "description": "vscode-highlight-text",
  "author": "Simon He <https://github.com/Simon-He95>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/vscode-highlight-text#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simon-He95/vscode-highlight-text"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/vscode-highlight-text/issues"
  },
  "sponsor": {
    "url": "https://github.com/Simon-He95/sponsor"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "icon.png",
  "engines": {
    "vscode": "1.75.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "vscode-highlight-text",
      "properties": {
        "vscode-highlight-text.rules": {
          "type": "object",
          "default": {
            "vue": {},
            "react": {},
            "svelte": {},
            "astro": {},
            "solid": {},
            "markdown": {}
          },
          "description": "highlight vue | react | svelte | solid | astro | ... style"
        },
        "vscode-highlight-text.exclude": {
          "type": "array",
          "default": [
            "**/dist/**",
            "**/node_modules/**"
          ],
          "description": "The directory you want to be skipped"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-highlight-text.selectTemplate",
        "title": "Select the vscode-highlight-text template"
      }
    ]
  },
  "scripts": {
    "dev": "pnpm build --watch",
    "test": "vitest",
    "build": "tsup src/index.ts --external vscode",
    "pack": "vsce package --no-dependencies",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix",
    "publish": "vsce publish --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm run publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.15.0",
    "@rollup/pluginutils": "^5.1.4",
    "@types/node": "^18.19.71",
    "@types/vscode": "1.75.1",
    "@vscode-use/utils": "^0.1.40",
    "@vscode/vsce": "^3.2.1",
    "bumpp": "^9.10.1",
    "eslint": "^9.18.0",
    "lazy-js-utils": "^0.1.28",
    "tsup": "^6.7.0",
    "typescript": "^5.7.3",
    "vitest": "^0.29.8"
  }
}
